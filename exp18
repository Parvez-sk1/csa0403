#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, disk_size, direction;
    int total = 0;

    printf("Enter number of disk requests: ");
    scanf("%d", &n);

    int request[n];

    printf("Enter disk request sequence:\n");
    for(int i = 0; i < n; i++)
        scanf("%d", &request[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size (number of cylinders): ");
    scanf("%d", &disk_size);

    printf("Enter direction (0 = left, 1 = right): ");
    scanf("%d", &direction);

    // Add head and end values
    request[n++] = head;
    request[n++] = (direction == 1) ? disk_size - 1 : 0;

    // Sort requests
    for(int i = 0; i < n - 1; i++) {
        for(int j = 0; j < n - i - 1; j++) {
            if(request[j] > request[j + 1]) {
                int temp = request[j];
                request[j] = request[j + 1];
                request[j + 1] = temp;
            }
        }
    }

    // Find head index
    int pos;
    for(int i = 0; i < n; i++) {
        if(request[i] == head) {
            pos = i;
            break;
        }
    }

    printf("\nDisk Movement Sequence:\n");

    if(direction == 1) {
        // Move right
        for(int i = pos; i < n - 1; i++) {
            printf("%d -> ", request[i]);
            total += abs(request[i + 1] - request[i]);
        }
        // Move left
        for(int i = pos - 1; i >= 0; i--) {
            printf("%d -> ", request[i + 1]);
            total += abs(request[i + 1] - request[i]);
        }
        printf("%d", request[0]);
    } else {
        // Move left
        for(int i = pos; i > 0; i--) {
            printf("%d -> ", request[i]);
            total += abs(request[i] - request[i - 1]);
        }
        // Move right
        for(int i = pos + 1; i < n; i++) {
            printf("%d -> ", request[i - 1]);
            total += abs(request[i] - request[i - 1]);
        }
        printf("%d", request[n - 1]);
    }

    printf("\n\nTotal head movement = %d cylinders\n", total);
    return 0;
}
