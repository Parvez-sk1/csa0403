#include <stdio.h>

int main() {
    int n, start, length;

    printf("Enter number of files: ");
    scanf("%d", &n);

    int file[n], startBlock[n], size[n];

    for(int i = 0; i < n; i++) {
        printf("\nEnter File ID: ");
        scanf("%d", &file[i]);

        printf("Enter starting block: ");
        scanf("%d", &startBlock[i]);

        printf("Enter file size (number of blocks): ");
        scanf("%d", &size[i]);
    }

    printf("\nFile Allocation Table\n");
    printf("File ID\tStart Block\tLength\tAllocated Blocks\n");

    for(int i = 0; i < n; i++) {
        printf("%d\t\t%d\t\t%d\t", file[i], startBlock[i], size[i]);

        for(int j = 0; j < size[i]; j++) {
            printf("%d ", startBlock[i] + j);
        }
        printf("\n");
    }

    return 0;
}

