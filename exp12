#include <stdio.h>

int findLRU(int time[], int frames) {
    int min = time[0], pos = 0;

    for(int i = 1; i < frames; i++) {
        if(time[i] < min) {
            min = time[i];
            pos = i;
        }
    }
    return pos;
}

int main() {
    int frames, pages;
    int pageFaults = 0, counter = 0;

    printf("Enter number of frames: ");
    scanf("%d", &frames);

    printf("Enter number of pages: ");
    scanf("%d", &pages);

    int reference[pages];
    printf("Enter page reference string:\n");
    for(int i = 0; i < pages; i++)
        scanf("%d", &reference[i]);

    int frame[frames], time[frames];

    for(int i = 0; i < frames; i++) {
        frame[i] = -1;
        time[i] = 0;
    }

    printf("\nPage Replacement Process:\n");

    for(int i = 0; i < pages; i++) {
        int found = 0;

        // Check for page hit
        for(int j = 0; j < frames; j++) {
            if(frame[j] == reference[i]) {
                counter++;
                time[j] = counter;
                found = 1;
                break;
            }
        }

        // Page fault
        if(!found) {
            int pos;
            if(i < frames) {
                pos = i;
            } else {
                pos = findLRU(time, frames);
            }

            counter++;
            frame[pos] = reference[i];
            time[pos] = counter;
            pageFaults++;
        }

        // Display frames
        printf("Page %d -> ", reference[i]);
        for(int j = 0; j < frames; j++) {
            if(frame[j] != -1)
                printf("%d ", frame[j]);
            else
                printf("- ");
        }
        printf("\n");
    }

    printf("\nTotal Page Faults = %d\n", pageFaults);
    return 0;
}
