#include <stdio.h>
#include <string.h>

struct file {
    char fname[20];
};

struct user {
    char uname[20];
    int fcount;
    struct file files[20];
};

int main() {
    struct user users[10];
    int ucount, choice;
    char uname[20], fname[20];

    printf("Enter number of users: ");
    scanf("%d", &ucount);

    // Create directories for each user
    for(int i = 0; i < ucount; i++) {
        printf("\nEnter user name: ");
        scanf("%s", users[i].uname);

        printf("Enter number of files for %s: ", users[i].uname);
        scanf("%d", &users[i].fcount);

        for(int j = 0; j < users[i].fcount; j++) {
            printf("Enter file name %d: ", j + 1);
            scanf("%s", users[i].files[j].fname);
        }
    }

    do {
        printf("\n1. Display directory");
        printf("\n2. Search file");
        printf("\n3. Exit");
        printf("\nEnter your choice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1:
                printf("\nDirectory Structure:\n");
                for(int i = 0; i < ucount; i++) {
                    printf("\nUser: %s\n", users[i].uname);
                    for(int j = 0; j < users[i].fcount; j++)
                        printf("  %s\n", users[i].files[j].fname);
                }
                break;

            case 2:
                printf("Enter user name: ");
                scanf("%s", uname);
                printf("Enter file name to search: ");
                scanf("%s", fname);

                int ufound = 0, ffound = 0;
                for(int i = 0; i < ucount; i++) {
                    if(strcmp(users[i].uname, uname) == 0) {
                        ufound = 1;
                        for(int j = 0; j < users[i].fcount; j++) {
                            if(strcmp(users[i].files[j].fname, fname) == 0) {
                                ffound = 1;
                                break;
                            }
                        }
                        break;
                    }
                }

                if(ufound && ffound)
                    printf("File found\n");
                else
                    printf("File not found\n");
                break;

            case 3:
                printf("Exiting...\n");
                break;

            default:
                printf("Invalid choice\n");
        }

    } while(choice != 3);

    return 0;
}
