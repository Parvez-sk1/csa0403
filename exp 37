#include <stdio.h>

struct Process {
    int pid;
    int at;     // arrival time
    int bt;     // burst time
    int rt;     // remaining time
    int priority;
    int ct;     // completion time
    int tat;    // turnaround time
    int wt;     // waiting time
};

int main() {
    int n, completed = 0, time = 0, minPriority;
    int shortest = -1;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];

    printf("\nEnter Arrival Time, Burst Time, Priority for each process:\n");
    for (int i = 0; i < n; i++) {
        p[i].pid = i + 1;
        printf("P%d AT BT Priority: ", i + 1);
        scanf("%d %d %d", &p[i].at, &p[i].bt, &p[i].priority);
        p[i].rt = p[i].bt;
    }

    while (completed != n) {
        minPriority = 9999;
        shortest = -1;

        // pick process with highest priority (lowest number)
        for (int i = 0; i < n; i++) {
            if (p[i].at <= time && p[i].rt > 0) {
                if (p[i].priority < minPriority) {
                    minPriority = p[i].priority;
                    shortest = i;
                }
                // tie â€“ choose by arrival time
                else if (p[i].priority == minPriority) {
                    if (p[i].at < p[shortest].at)
                        shortest = i;
                }
            }
        }

        if (shortest == -1) {
            time++;  // no process arrived yet
            continue;
        }

        // execute 1 unit of time
        p[shortest].rt--;
        time++;

        // process finished
        if (p[shortest].rt == 0) {
            p[shortest].ct = time;
            p[shortest].tat = p[shortest].ct - p[shortest].at;
            p[shortest].wt = p[shortest].tat - p[shortest].bt;
            completed++;
        }
    }

    // Print Table
    printf("\nP\tAT\tBT\tPri\tCT\tTAT\tWT\n");
    for (int i = 0; i < n; i++) {
        printf("%d\t%d\t%d\t%d\t%d\t%d\t%d\n",
               p[i].pid, p[i].at, p[i].bt, p[i].priority,
               p[i].ct, p[i].tat, p[i].wt);
    }

    // Averages
    float avgWT = 0, avgTAT = 0;
    for (int i = 0; i < n; i++) {
        avgWT += p[i].wt;
        avgTAT += p[i].tat;
    }

    printf("\nAverage Waiting Time = %.2f", avgWT / n);
    printf("\nAverage Turnaround Time = %.2f\n", avgTAT / n);

    return 0;
}
