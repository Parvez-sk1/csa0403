#include <stdio.h>
#include <stdlib.h>

int main() {
    FILE *fp;
    char filename[50];
    char data[100];
    char readData[100];

    // Get file name
    printf("Enter file name: ");
    scanf("%s", filename);

    // Open file for writing
    fp = fopen(filename, "w");
    if (fp == NULL) {
        printf("File open failed\n");
        return 1;
    }

    printf("Enter text to write into file: ");
    getchar(); // clear buffer
    fgets(data, sizeof(data), stdin);

    fprintf(fp, "%s", data);
    fclose(fp);

    printf("Data written successfully\n");

    // Open file for reading
    fp = fopen(filename, "r");
    if (fp == NULL) {
        printf("File open failed\n");
        return 1;
    }

    printf("Reading data from file:\n");
    while (fgets(readData, sizeof(readData), fp) != NULL) {
        printf("%s", readData);
    }

    fclose(fp);
    printf("\nFile closed successfully\n");

    return 0;
}
