#include <stdio.h>

int main() {
    int nb, np;

    printf("Enter number of memory blocks: ");
    scanf("%d", &nb);

    int blockSize[nb], blockAllocated[nb];

    printf("Enter size of each block:\n");
    for(int i = 0; i < nb; i++) {
        scanf("%d", &blockSize[i]);
        blockAllocated[i] = 0;   // Initially free
    }

    printf("Enter number of processes: ");
    scanf("%d", &np);

    int processSize[np], allocation[np];

    printf("Enter size of each process:\n");
    for(int i = 0; i < np; i++) {
        scanf("%d", &processSize[i]);
        allocation[i] = -1;      // Not allocated initially
    }

    // Best Fit Allocation
    for(int i = 0; i < np; i++) {
        int bestIndex = -1;

        for(int j = 0; j < nb; j++) {
            if(blockAllocated[j] == 0 && blockSize[j] >= processSize[i]) {
                if(bestIndex == -1 || blockSize[j] < blockSize[bestIndex]) {
                    bestIndex = j;
                }
            }
        }

        if(bestIndex != -1) {
            allocation[i] = bestIndex;
            blockAllocated[bestIndex] = 1;
        }
    }

    // Display results
    printf("\nProcess No\tProcess Size\tBlock Allocated\n");
    for(int i = 0; i < np; i++) {
        printf("%d\t\t%d\t\t", i + 1, processSize[i]);
        if(allocation[i] != -1)
            printf("%d\n", allocation[i] + 1);
        else
            printf("Not Allocated\n");
    }

    return 0;
}
