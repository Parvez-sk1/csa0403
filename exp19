#include <stdio.h>
#include <string.h>

struct file {
    char name[20];
};

int main() {
    struct file dir[50];
    int n, choice;
    char fname[20];

    printf("Enter number of files: ");
    scanf("%d", &n);

    // Create directory
    for(int i = 0; i < n; i++) {
        printf("Enter file name %d: ", i + 1);
        scanf("%s", dir[i].name);
    }

    do {
        printf("\n1. Display files");
        printf("\n2. Search file");
        printf("\n3. Exit");
        printf("\nEnter your choice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1:
                printf("\nFiles in directory:\n");
                for(int i = 0; i < n; i++)
                    printf("%s\n", dir[i].name);
                break;

            case 2:
                printf("Enter file name to search: ");
                scanf("%s", fname);
                int found = 0;
                for(int i = 0; i < n; i++) {
                    if(strcmp(dir[i].name, fname) == 0) {
                        found = 1;
                        break;
                    }
                }
                if(found)
                    printf("File found\n");
                else
                    printf("File not found\n");
                break;

            case 3:
                printf("Exiting...\n");
                break;

            default:
                printf("Invalid choice\n");
        }
    } while(choice != 3);

    return 0;
}
