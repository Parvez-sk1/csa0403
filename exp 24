#include <stdio.h>
#include <string.h>

int main() {
    char filename[50];
    char keyword[50];
    char line[200];
    FILE *fp;
    int line_num = 1;
    int found = 0;

    // User input
    printf("Enter file name: ");
    scanf("%s", filename);

    printf("Enter keyword to search: ");
    scanf("%s", keyword);

    // Open file
    fp = fopen(filename, "r");
    if (fp == NULL) {
        printf("File not found\n");
        return 1;
    }

    printf("\nLines containing '%s':\n", keyword);

    // Read line by line and search for keyword
    while (fgets(line, sizeof(line), fp)) {
        if (strstr(line, keyword) != NULL) {
            printf("Line %d: %s", line_num, line);
            found = 1;
        }
        line_num++;
    }

    if (!found)
        printf("Keyword not found in the file.\n");

    fclose(fp);
    return 0;
}
