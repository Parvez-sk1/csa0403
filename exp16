#include <stdio.h>

int main()
{
    int blocks, processes;

    printf("Enter number of memory blocks: ");
    scanf("%d", &blocks);

    int blockSize[blocks];
    printf("Enter memory block sizes (in KB):\n");
    for (int i = 0; i < blocks; i++)
        scanf("%d", &blockSize[i]);

    printf("\nEnter number of processes: ");
    scanf("%d", &processes);

    int processSize[processes], allocation[processes];

    printf("Enter process sizes (in KB):\n");
    for (int i = 0; i < processes; i++)
    {
        scanf("%d", &processSize[i]);
        allocation[i] = -1;   // initialize
    }

    // First Fit Algorithm
    for (int i = 0; i < processes; i++)
    {
        for (int j = 0; j < blocks; j++)
        {
            if (blockSize[j] >= processSize[i])
            {
                allocation[i] = j;
                blockSize[j] -= processSize[i];
                break;
            }
        }
    }

    // Output
    printf("\nOutput:\n\n");
    for (int i = 0; i < processes; i++)
    {
        if (allocation[i] != -1)
        {
            printf("P%d allocated to block -> Remaining = %d KB\n",
                   i + 1, blockSize[allocation[i]]);
        }
        else
        {
            printf("P%d not allocated\n", i + 1);
        }
    }

    return 0;
}
