#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, disk_size;
    int total = 0;

    printf("Enter number of disk requests: ");
    scanf("%d", &n);

    int request[n];

    printf("Enter disk request sequence:\n");
    for(int i = 0; i < n; i++)
        scanf("%d", &request[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size (number of cylinders): ");
    scanf("%d", &disk_size);

    // Add head and boundaries (0 and disk_size-1)
    request[n++] = head;
    request[n++] = disk_size - 1;     // highest
    request[n++] = 0;                 // lowest

    // Sort the request array
    for(int i = 0; i < n - 1; i++) {
        for(int j = 0; j < n - i - 1; j++) {
            if(request[j] > request[j + 1]) {
                int temp = request[j];
                request[j] = request[j + 1];
                request[j + 1] = temp;
            }
        }
    }

    // Find head index
    int pos = 0;
    for(int i = 0; i < n; i++) {
        if(request[i] == head) {
            pos = i;
            break;
        }
    }

    printf("\nDisk Movement Sequence:\n%d", head);

    // Move right until end
    for(int i = pos + 1; i < n; i++) {
        total += abs(request[i] - head);
        head = request[i];
        printf(" -> %d", head);
    }

    // Jump from end to start (circular)
    // No movement counted here
    printf(" -> %d", 0);

    // Start from beginning up to original pos
    head = 0;
    for(int i = 0; i < pos; i++) {
        total += abs(request[i] - head);
        head = request[i];
        printf(" -> %d", head);
    }

    printf("\n\nTotal head movement = %d cylinders\n", total);

    return 0;
}
