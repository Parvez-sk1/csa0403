#include <stdio.h>

int predict(int frame[], int pages[], int pn, int index, int frames) {
    int res = -1, farthest = index;

    for(int i = 0; i < frames; i++) {
        int j;
        for(j = index; j < pn; j++) {
            if(frame[i] == pages[j]) {
                if(j > farthest) {
                    farthest = j;
                    res = i;
                }
                break;
            }
        }
        // Page not found in future
        if(j == pn)
            return i;
    }

    // If all pages are found in future
    return (res == -1) ? 0 : res;
}

int main() {
    int frames, pages;
    int pageFaults = 0;

    printf("Enter number of frames: ");
    scanf("%d", &frames);

    printf("Enter number of pages: ");
    scanf("%d", &pages);

    int reference[pages];
    printf("Enter page reference string:\n");
    for(int i = 0; i < pages; i++)
        scanf("%d", &reference[i]);

    int frame[frames];
    for(int i = 0; i < frames; i++)
        frame[i] = -1;

    printf("\nPage Replacement Process:\n");

    for(int i = 0; i < pages; i++) {
        int found = 0;

        // Check for page hit
        for(int j = 0; j < frames; j++) {
            if(frame[j] == reference[i]) {
                found = 1;
                break;
            }
        }

        // Page fault
        if(!found) {
            int pos;

            // Empty frame available
            if(i < frames) {
                pos = i;
            } else {
                pos = predict(frame, reference, pages, i + 1, frames);
            }

            frame[pos] = reference[i];
            pageFaults++;
        }

        // Display frames
        printf("Page %d -> ", reference[i]);
        for(int j = 0; j < frames; j++) {
            if(frame[j] != -1)
                printf("%d ", frame[j]);
            else
                printf("- ");
        }
        printf("\n");
    }

    printf("\nTotal Page Faults = %d\n", pageFaults);
    return 0;
}
